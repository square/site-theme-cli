{
  "compilerOptions": {
	  "jsx": "react",
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "nodenext",
		"moduleResolution": "nodenext",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "composite": true,
    "allowSyntheticDefaultImports": true, 
    "moduleDetection": "force",
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true,
  }
}
